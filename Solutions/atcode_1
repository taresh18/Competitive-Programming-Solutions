#include<iostream>

using namespace std;

int main(){
	
	int a, b, c, d;
	cin>>a>>b>>c>>d;
	if(b>=0 && d>=0) cout<<b*d;
	else if(b<=0 && d<=0) cout<<b*d;
	else if(d>=0 && b<=0){
		if(c>=0) cout<<b*c;
		else cout<<a*c;
	}
	else if(b>=0 && d<=0){
		if(a>=0) cout<<a*d;
		else cout<<a*c;
	}
	
	return 0;
}